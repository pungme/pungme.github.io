.tiktok-caption {
    flex: 1;
}

.tiktok-caption p {
    font-size: 14px;
    color: #fff;
    line-height: 1.5;
    margin: 0;
}

.tiktok-options {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0;
}

.tiktok-option {
    display: flex;
    align-items: center;
