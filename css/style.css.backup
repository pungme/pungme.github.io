        flex-direction: column;
        text-align: center;
        gap: 32px;
    }

    .advertiser-text {
        max-width: 100%;
    }

    .advertiser-desc {
        font-size: 16px;
    }

    .btn-advertiser {
        padding: 16px 32px;
        font-size: 15px;
    }
}

