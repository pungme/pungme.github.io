/* CTA Card */
.bento-cta {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.bento-cta .cta-label {
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.8;
    margin-bottom: 8px;
}

.bento-cta h4 {
    font-size: 22px;
    font-weight: 800;
    margin-bottom: 20px;
}

.bento-cta .cta-btn {
    display: inline-block;
    padding: 14px 28px;
    background: white;
    color: #764ba2;
    font-size: 15px;
    font-weight: 700;
    border-radius: 100px;
    text-decoration: none;
    transition: all 0.3s ease;
    text-align: center;
}

.bento-cta .cta-btn:hover {
